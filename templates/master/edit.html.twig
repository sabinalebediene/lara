{% extends 'base.html.twig' %}

{% block title %}Edit Master{% endblock %}

{% block body %}


<div class="container">
   <div class="row justify-content-center">
       <div class="col-md-8">
           <div class="card">
               <div class="card-header"><h1>Edit  Master</h1></div>
               <div class="card-body">
                    <form action="{{path('master_update', {id:master.id})}}" method="POST">
							<div class="form-group">
								<label>Name</label>
								<input type="text" name="master_name" class="form-control" value="{{master_name}}">
								<small class="form-text text-muted">master name</small>
							</div>
							<div class="form-group">
								<label>Surname</label>
								<input type="text" name="master_surname" class="form-control" value="{{master_surname}}">
								<small class="form-text text-muted">master surname</small>
							</div>
                    <button type="submit" class="btn btn-primary">Edit Master</button>
                    </form>
               </div>
           </div>
       </div>
   </div>
</div>

{% endblock %}