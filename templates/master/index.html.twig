{% extends 'base.html.twig' %}

{% block title %}Master List
{% endblock %}

{% block body %}


	<div class="container-fluid">
		<div class="row justify-content-center">
			<div class="col-md-8">
				<div class="card">
					<div class="card-header">
						<h1>Masters</h1>
					</div>
					<div class="card-body">
						List order by:
						<form action="{{path('master_index')}}" method="GET" lass="sort-form  ">
							<div class="form-group">
								<select name="sort" class="form-control">
									<option value="default">default</option>
									<option value="name_az" {% if sortBy =='name_az'%} selected {% endif %}>NAME A-Z</option>
									<option value="name_za" {% if sortBy =='name_za'%} selected {% endif %}>NAME Z-A</option>
									<option value="surname_az" {% if sortBy =='surname_az'%} selected {% endif %}>SURNAME A-Z</option>
									<option value="surname_za" {% if sortBy =='surname_za'%} selected {% endif %}>SURNAME Z-A</option>
								</select>
							</div>
							<button type="submit" class="btn btn-dark">Sort IT!</button>
							<a href="{{path('master_index')}}">CLEAR</a>
						</form>
						<div class="table-responsive-sm">
							<table class="table table-bordered">
								<thead class="thead-dark">
									<tr>
										<th scope="col">Master Name</th>
										<th scope="col"></th>
									</tr>
								</thead>
								{% for master in masters %}
									<tbody>
										<tr>
											<td>
												{{master.name}}
												{{master.surname}}
											</td>
											<td class="list-group-item__line__buttons" role="group" aria-label="Basic example">
												<a href="{{path('master_edit', {id:master.id})}}" class="btn btn-secondary">EDIT</a>
												<form action="{{path('master_delete', {id:master.id})}}" method="POST">
													<button type="submit" class="btn btn-primary">DELETE</button>
												</form>
											</td>
										</tr>
									</tbody>
								{% endfor %}
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
